generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  admin
  viewer
  operator
}

model User {
  id String @id @default(cuid())

  email    String @unique
  password String
  username String @unique

  role UserRole @default(admin)

  isActive Boolean @default(true)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  cameras Camera[]

  @@index([username])
  @@index([email])
  @@map("users")
}

model Camera {
  id String @id @default(cuid())

  // Basic Info
  name        String
  rtspUrl     String  @unique
  location    String?
  description String?
  resolution  String?
  fps         Int     @default(30) // Camera capture rate

  // Status
  isActive Boolean @default(true) // Whether the camera is active in the system
  isOnline Boolean @default(false) // Real-time online/streaming status

  // Face Detection Configuration
  faceDetectionEnabled Boolean @default(true)
  frameSkipInterval    Int     @default(2) // Process every Nth frame

  // Stream URLs (generated by worker)
  webrtcUrl String?
  hlsUrl    String?
  rtmpUrl   String?

  // Health Tracking
  lastOnlineAt  DateTime?
  lastOfflineAt DateTime?

  // Timestamps
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  // Relations
  alerts Alert[]

  @@index([userId])
  @@index([isActive])
  @@index([isOnline])
  @@index([createdAt])
  @@map("cameras")
}

model Alert {
  id String @id @default(cuid())

  faceCount  Int   @default(1)
  confidence Float @default(0.85)

  snapshotUrl String?
  metadata    Json?

  createdAt DateTime @default(now())

  cameraId String

  // Relations
  camera Camera @relation(fields: [cameraId], references: [id], onDelete: Cascade)

  // Indexes for optimization
  @@index([cameraId])
  @@index([createdAt])
  @@index([cameraId, createdAt])
  @@map("alerts")
}
